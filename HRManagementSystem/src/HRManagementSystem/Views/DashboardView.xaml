<!-- =====================================================
     نظام إدارة الموارد البشرية - HR Management System
     DashboardView.xaml - لوحة التحكم
     ===================================================== -->
<UserControl x:Class="HRManagementSystem.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             FlowDirection="RightToLeft">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- العنوان -->
            <TextBlock Grid.Row="0" 
                       Text="لوحة التحكم"
                       Style="{StaticResource HeaderTextStyle}"
                       Margin="0,0,0,24"/>

            <!-- بطاقات الإحصائيات -->
            <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,16">
                <!-- إجمالي الموظفين -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountMultiple"
                                                     Width="32" Height="32"
                                                     Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                            <TextBlock Text="إجمالي الموظفين"
                                       Style="{StaticResource BodyTextStyle}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"/>
                        </StackPanel>
                        <TextBlock Text="{Binding TotalEmployees}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryHueMidBrush}"
                                   Margin="0,8,0,0"/>
                        <TextBlock Text="{Binding ActiveEmployees, StringFormat='نشط: {0}'}"
                                   Style="{StaticResource BodyTextStyle}"
                                   Opacity="0.7"/>
                    </StackPanel>
                </Border>

                <!-- الحاضرين اليوم -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountCheck"
                                                     Width="32" Height="32"
                                                     Foreground="{StaticResource SuccessBrush}"/>
                            <TextBlock Text="الحاضرين اليوم"
                                       Style="{StaticResource BodyTextStyle}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"/>
                        </StackPanel>
                        <TextBlock Text="{Binding PresentToday}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource SuccessBrush}"
                                   Margin="0,8,0,0"/>
                        <TextBlock Text="{Binding AbsentToday, StringFormat='غائب: {0}'}"
                                   Style="{StaticResource BodyTextStyle}"
                                   Opacity="0.7"/>
                    </StackPanel>
                </Border>

                <!-- طلبات الإجازة -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CalendarClock"
                                                     Width="32" Height="32"
                                                     Foreground="{StaticResource WarningBrush}"/>
                            <TextBlock Text="طلبات الإجازة المعلقة"
                                       Style="{StaticResource BodyTextStyle}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"/>
                        </StackPanel>
                        <TextBlock Text="{Binding PendingLeaveRequests}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource WarningBrush}"
                                   Margin="0,8,0,0"/>
                        <TextBlock Text="{Binding OnLeaveToday, StringFormat='في إجازة اليوم: {0}'}"
                                   Style="{StaticResource BodyTextStyle}"
                                   Opacity="0.7"/>
                    </StackPanel>
                </Border>

                <!-- رواتب الشهر -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CashMultiple"
                                                     Width="32" Height="32"
                                                     Foreground="{StaticResource AccentBrush}"/>
                            <TextBlock Text="رواتب الشهر"
                                       Style="{StaticResource BodyTextStyle}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"/>
                        </StackPanel>
                        <TextBlock Text="{Binding TotalPayrollThisMonth, StringFormat='{}{0:N0} د.ع'}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentBrush}"
                                   Margin="0,8,0,0"/>
                        <TextBlock Text="{Binding ExpiringDocuments, StringFormat='مستندات تنتهي قريباً: {0}'}"
                                   Style="{StaticResource BodyTextStyle}"
                                   Opacity="0.7"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- الرسوم البيانية -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- توزيع الموظفين حسب الأقسام -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="توزيع الموظفين حسب الأقسام"
                                   Style="{StaticResource SubHeaderTextStyle}"
                                   Margin="0,0,0,16"/>
                        <ItemsControl ItemsSource="{Binding DepartmentStats}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding DepartmentName}"
                                                   Style="{StaticResource BodyTextStyle}"
                                                   VerticalAlignment="Center"/>
                                        <Border Grid.Column="1"
                                                Background="{DynamicResource PrimaryHueMidBrush}"
                                                CornerRadius="12"
                                                Padding="8,4">
                                            <TextBlock Text="{Binding EmployeeCount}"
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- معلومات المستخدم والنظام -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="معلومات النظام"
                                   Style="{StaticResource SubHeaderTextStyle}"
                                   Margin="0,0,0,16"/>

                        <Grid Margin="0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon Kind="Account" Width="24" Height="24"
                                                     Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                     VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock Text="المستخدم الحالي" Style="{StaticResource BodyTextStyle}" Opacity="0.7"/>
                                <TextBlock Text="{Binding CurrentUserName}" FontWeight="SemiBold" FontSize="16"
                                           Foreground="{DynamicResource MaterialDesignBody}"/>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon Kind="ShieldAccount" Width="24" Height="24"
                                                     Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                     VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock Text="الصلاحية" Style="{StaticResource BodyTextStyle}" Opacity="0.7"/>
                                <TextBlock Text="{Binding CurrentUserRole}" FontWeight="SemiBold" FontSize="16"
                                           Foreground="{DynamicResource MaterialDesignBody}"/>
                            </StackPanel>
                        </Grid>

                        <Separator Margin="0,16"/>

                        <TextBlock Text="مرحباً بك في نظام إدارة الموارد البشرية"
                                   Style="{StaticResource BodyTextStyle}"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Opacity="0.7"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>

