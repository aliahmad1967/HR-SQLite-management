<!-- =====================================================
     نظام إدارة الموارد البشرية - HR Management System
     SettingsView.xaml - صفحة الإعدادات
     ===================================================== -->
<UserControl x:Class="HRManagementSystem.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             FlowDirection="RightToLeft">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">
            <!-- العنوان -->
            <TextBlock Text="الإعدادات" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,24"/>

            <!-- إعدادات المظهر -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="المظهر" Style="{StaticResource SubHeaderTextStyle}" Margin="0,0,0,16"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="الوضع الداكن" FontSize="16" FontWeight="SemiBold"/>
                            <TextBlock Text="تفعيل الوضع الداكن للتطبيق" FontSize="12" Opacity="0.7" Margin="0,4,0,0"/>
                        </StackPanel>

                        <ToggleButton Grid.Column="1"
                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                      IsChecked="{Binding IsDarkMode}"
                                      ToolTip="تبديل الوضع الداكن/الفاتح"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- تغيير كلمة المرور -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="تغيير كلمة المرور" Style="{StaticResource SubHeaderTextStyle}" Margin="0,0,0,16"/>

                    <PasswordBox materialDesign:HintAssist.Hint="كلمة المرور الحالية"
                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                 Margin="0,0,0,8"/>

                    <PasswordBox materialDesign:HintAssist.Hint="كلمة المرور الجديدة"
                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                 Margin="0,0,0,8"/>

                    <PasswordBox materialDesign:HintAssist.Hint="تأكيد كلمة المرور الجديدة"
                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                 Margin="0,0,0,16"/>

                    <Button Content="تغيير كلمة المرور"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding ChangePasswordCommand}"
                            HorizontalAlignment="Right"/>
                </StackPanel>
            </Border>

            <!-- النسخ الاحتياطي -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="النسخ الاحتياطي" Style="{StaticResource SubHeaderTextStyle}"/>
                        <Button Content="إنشاء نسخة احتياطية" 
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding CreateBackupCommand}"
                                Margin="16,0,0,0"/>
                    </StackPanel>
                    
                    <DataGrid ItemsSource="{Binding Backups}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              MaxHeight="300">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="اسم الملف" Binding="{Binding FileName}" Width="*"/>
                            <DataGridTextColumn Header="التاريخ" Binding="{Binding CreatedDate, StringFormat=yyyy-MM-dd HH:mm}" Width="150"/>
                            <DataGridTextColumn Header="الحجم" Binding="{Binding Size}" Width="100"/>
                            <DataGridTemplateColumn Header="استعادة" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="استعادة" 
                                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                                Command="{Binding DataContext.RestoreBackupCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Padding="8,4"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- معلومات النظام -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="معلومات النظام" Style="{StaticResource SubHeaderTextStyle}" Margin="0,0,0,16"/>
                    <TextBlock Text="الإصدار: 1.0.0" Margin="0,0,0,4"/>
                    <TextBlock Text="قاعدة البيانات: SQLite" Margin="0,0,0,4"/>
                    <TextBlock Text=".NET 8.0 :إطار العمل" Margin="0,0,0,4"/>
                </StackPanel>
            </Border>

            <!-- رسالة الحالة -->
            <TextBlock Text="{Binding StatusMessage}" 
                       Margin="0,16,0,0"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>

