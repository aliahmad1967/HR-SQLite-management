<!-- =====================================================
     نظام إدارة الموارد البشرية - HR Management System
     EmployeesView.xaml - شاشة الموظفين
     ===================================================== -->
<UserControl x:Class="HRManagementSystem.Views.EmployeesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             FlowDirection="RightToLeft">

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- العنوان وأزرار الإجراءات -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="إدارة الموظفين"
                       Style="{StaticResource HeaderTextStyle}"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="إضافة موظف"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding AddEmployeeCommand}"
                        Margin="0,0,8,0">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center"/>
                                <TextBlock Text="إضافة موظف" Margin="8,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                        Command="{Binding RefreshCommand}"
                        ToolTip="تحديث">
                    <materialDesign:PackIcon Kind="Refresh"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- شريط البحث والفلترة -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="16" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         Style="{StaticResource ArabicTextBoxStyle}"
                         materialDesign:HintAssist.Hint="بحث بالاسم أو الرقم الوظيفي..."
                         materialDesign:TextFieldAssist.HasLeadingIcon="True"
                         materialDesign:TextFieldAssist.LeadingIcon="Magnify"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,16,0"/>

                <ComboBox Grid.Column="1"
                          Style="{StaticResource ArabicComboBoxStyle}"
                          materialDesign:HintAssist.Hint="القسم"
                          ItemsSource="{Binding Departments}"
                          SelectedItem="{Binding SelectedDepartment}"
                          DisplayMemberPath="Name"
                          Margin="0,0,16,0"/>

                <Button Grid.Column="2"
                        Content="بحث"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding SearchCommand}"/>
            </Grid>
        </Border>

        <!-- المحتوى الرئيسي -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- جدول الموظفين -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Padding="0" Margin="0,0,8,0">
                <DataGrid Style="{StaticResource ArabicDataGridStyle}"
                          ItemsSource="{Binding Employees}"
                          SelectedItem="{Binding SelectedEmployee}"
                          RowHeight="50">
                    <DataGrid.Columns>
                        <!-- عمود الصورة -->
                        <DataGridTemplateColumn Header="الصورة" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Width="40" Height="40" CornerRadius="20"
                                            Background="{DynamicResource MaterialDesignDivider}"
                                            ClipToBounds="True">
                                        <Grid>
                                            <materialDesign:PackIcon Kind="Account" Width="24" Height="24"
                                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                     Foreground="{DynamicResource MaterialDesignBody}"
                                                                     Opacity="0.5"/>
                                            <Image Source="{Binding ProfilePhoto, Converter={StaticResource ImagePathConverter}}"
                                                   Stretch="UniformToFill"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="الرقم الوظيفي" Binding="{Binding EmployeeNumber}" Width="120"/>
                        <DataGridTextColumn Header="الاسم الكامل" Binding="{Binding FullName}" Width="*"/>
                        <DataGridTextColumn Header="القسم" Binding="{Binding Department.Name}" Width="120"/>
                        <DataGridTextColumn Header="تاريخ التعيين" Binding="{Binding HireDate, StringFormat='{}{0:yyyy/MM/dd}'}" Width="100"/>
                        <DataGridTemplateColumn Header="الإجراءات" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                                Command="{Binding DataContext.EditEmployeeCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                ToolTip="تعديل">
                                            <materialDesign:PackIcon Kind="Pencil" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                        </Button>
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                                Command="{Binding DataContext.DeleteEmployeeCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                ToolTip="حذف">
                                            <materialDesign:PackIcon Kind="Delete" Foreground="{StaticResource ErrorBrush}"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- نموذج إضافة/تعديل موظف -->
            <Border Grid.Column="1"
                    Style="{StaticResource CardStyle}"
                    Width="380"
                    Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="8">
                        <TextBlock Text="بيانات الموظف" Style="{StaticResource SubHeaderTextStyle}" Margin="0,0,0,16"/>

                        <!-- صورة الموظف -->
                        <Grid Margin="0,0,0,16" HorizontalAlignment="Center">
                            <Border Width="120" Height="120" CornerRadius="60"
                                    Background="{DynamicResource MaterialDesignDivider}"
                                    ClipToBounds="True">
                                <Grid>
                                    <materialDesign:PackIcon Kind="Account" Width="60" Height="60"
                                                             HorizontalAlignment="Center" VerticalAlignment="Center"
                                                             Foreground="{DynamicResource MaterialDesignBody}"
                                                             Opacity="0.3"/>
                                    <Image Source="{Binding EmployeeImage}" Stretch="UniformToFill"
                                           Visibility="{Binding EmployeeImage, Converter={StaticResource NullToVisibilityConverter}}"/>
                                </Grid>
                            </Border>
                        </Grid>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,16">
                            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Command="{Binding SelectImageCommand}"
                                    Padding="8,4"
                                    Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Camera" VerticalAlignment="Center"/>
                                    <TextBlock Text="اختيار صورة" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Command="{Binding RemoveImageCommand}"
                                    Foreground="{StaticResource ErrorBrush}"
                                    BorderBrush="{StaticResource ErrorBrush}"
                                    Padding="8,4"
                                    Visibility="{Binding EmployeeImage, Converter={StaticResource NullToVisibilityConverter}}">
                                <materialDesign:PackIcon Kind="Delete"/>
                            </Button>
                        </StackPanel>

                        <TextBox Style="{StaticResource ArabicTextBoxStyle}"
                                 materialDesign:HintAssist.Hint="الرقم الوظيفي"
                                 Text="{Binding EditingEmployee.EmployeeNumber, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,8"/>

                        <TextBox Style="{StaticResource ArabicTextBoxStyle}"
                                 materialDesign:HintAssist.Hint="الاسم الأول *"
                                 Text="{Binding EditingEmployee.FirstName, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,8"/>

                        <TextBox Style="{StaticResource ArabicTextBoxStyle}"
                                 materialDesign:HintAssist.Hint="اسم العائلة *"
                                 Text="{Binding EditingEmployee.LastName, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,8"/>

                        <TextBox Style="{StaticResource ArabicTextBoxStyle}"
                                 materialDesign:HintAssist.Hint="البريد الإلكتروني"
                                 Text="{Binding EditingEmployee.Email, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,8"/>

                        <TextBox Style="{StaticResource ArabicTextBoxStyle}"
                                 materialDesign:HintAssist.Hint="رقم الهاتف"
                                 Text="{Binding EditingEmployee.Phone, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,8"/>

                        <TextBox Style="{StaticResource ArabicTextBoxStyle}"
                                 materialDesign:HintAssist.Hint="رقم الهوية"
                                 Text="{Binding EditingEmployee.NationalId, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,8"/>

                        <ComboBox Style="{StaticResource ArabicComboBoxStyle}"
                                  materialDesign:HintAssist.Hint="القسم"
                                  ItemsSource="{Binding Departments}"
                                  SelectedValue="{Binding EditingEmployee.DepartmentId}"
                                  SelectedValuePath="Id"
                                  DisplayMemberPath="Name"
                                  Margin="0,0,0,8"/>

                        <DatePicker Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                    materialDesign:HintAssist.Hint="تاريخ التعيين"
                                    SelectedDate="{Binding EditingEmployee.HireDate}"
                                    Margin="0,0,0,8"/>

                        <TextBox Style="{StaticResource ArabicTextBoxStyle}"
                                 materialDesign:HintAssist.Hint="الراتب الأساسي"
                                 Text="{Binding EditingEmployee.BasicSalary, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,8"/>

                        <TextBox Style="{StaticResource ArabicTextBoxStyle}"
                                 materialDesign:HintAssist.Hint="العنوان"
                                 Text="{Binding EditingEmployee.Address, UpdateSourceTrigger=PropertyChanged}"
                                 TextWrapping="Wrap"
                                 MinHeight="60"
                                 Margin="0,0,0,16"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Button Content="حفظ"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Command="{Binding SaveEmployeeCommand}"
                                    Margin="0,0,8,0"/>
                            <Button Content="إلغاء"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Command="{Binding CancelEditCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- مؤشر التحميل -->
        <ProgressBar Grid.Row="2"
                     IsIndeterminate="True"
                     Style="{StaticResource MaterialDesignCircularProgressBar}"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
    </Grid>
</UserControl>

