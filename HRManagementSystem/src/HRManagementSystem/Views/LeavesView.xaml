<!-- =====================================================
     نظام إدارة الموارد البشرية - HR Management System
     LeavesView.xaml - شاشة الإجازات
     ===================================================== -->
<UserControl x:Class="HRManagementSystem.Views.LeavesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             FlowDirection="RightToLeft">

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- العنوان وأزرار الإجراءات -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="إدارة الإجازات"
                       Style="{StaticResource HeaderTextStyle}"/>

            <Button Grid.Column="1"
                    Content="طلب إجازة جديدة"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding AddLeaveCommand}">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center"/>
                            <TextBlock Text="طلب إجازة جديدة" Margin="8,0,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </Grid>

        <!-- بطاقات الإجازات المعلقة -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="طلبات الإجازة المعلقة"
                           Style="{StaticResource SubHeaderTextStyle}"
                           Margin="0,0,0,16"/>

                <ItemsControl ItemsSource="{Binding PendingLeaves}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Employee.FullName}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding LeaveType.Name}" Foreground="Gray" FontSize="12"/>
                                        <TextBlock Foreground="Gray" FontSize="12">
                                            <Run Text="{Binding StartDate, StringFormat='{}{0:yyyy/MM/dd}'}"/>
                                            <Run Text=" - "/>
                                            <Run Text="{Binding EndDate, StringFormat='{}{0:yyyy/MM/dd}'}"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding TotalDays, StringFormat='{}{0} يوم'}"
                                               VerticalAlignment="Center"
                                               Margin="16,0"/>

                                    <Button Grid.Column="2"
                                            Style="{StaticResource MaterialDesignIconButton}"
                                            Command="{Binding DataContext.ApproveLeaveCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding Id}"
                                            ToolTip="موافقة">
                                        <materialDesign:PackIcon Kind="Check" Foreground="{StaticResource SuccessBrush}"/>
                                    </Button>

                                    <Button Grid.Column="3"
                                            Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="رفض">
                                        <materialDesign:PackIcon Kind="Close" Foreground="{StaticResource ErrorBrush}"/>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- المحتوى الرئيسي -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- جدول الإجازات -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Padding="0" Margin="0,0,8,0">
                <DataGrid Style="{StaticResource ArabicDataGridStyle}"
                          ItemsSource="{Binding Leaves}"
                          SelectedItem="{Binding SelectedLeave}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="الموظف" Binding="{Binding Employee.FullName}" Width="*"/>
                        <DataGridTextColumn Header="نوع الإجازة" Binding="{Binding LeaveType.Name}" Width="100"/>
                        <DataGridTextColumn Header="من" Binding="{Binding StartDate, StringFormat='{}{0:yyyy/MM/dd}'}" Width="90"/>
                        <DataGridTextColumn Header="إلى" Binding="{Binding EndDate, StringFormat='{}{0:yyyy/MM/dd}'}" Width="90"/>
                        <DataGridTextColumn Header="الأيام" Binding="{Binding TotalDays}" Width="60"/>
                        <DataGridTextColumn Header="الحالة" Binding="{Binding Status}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- نموذج طلب إجازة -->
            <Border Grid.Column="1"
                    Style="{StaticResource CardStyle}"
                    Width="320"
                    Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Margin="8">
                    <TextBlock Text="طلب إجازة جديدة" Style="{StaticResource SubHeaderTextStyle}" Margin="0,0,0,16"/>

                    <ComboBox Style="{StaticResource ArabicComboBoxStyle}"
                              materialDesign:HintAssist.Hint="الموظف *"
                              ItemsSource="{Binding Employees}"
                              SelectedValue="{Binding EditingLeave.EmployeeId}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="FullName"
                              Margin="0,0,0,8"/>

                    <ComboBox Style="{StaticResource ArabicComboBoxStyle}"
                              materialDesign:HintAssist.Hint="نوع الإجازة *"
                              ItemsSource="{Binding LeaveTypes}"
                              SelectedValue="{Binding EditingLeave.LeaveTypeId}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="Name"
                              Margin="0,0,0,8"/>

                    <DatePicker Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                materialDesign:HintAssist.Hint="تاريخ البداية *"
                                SelectedDate="{Binding EditingLeave.StartDate}"
                                Margin="0,0,0,8"/>

                    <DatePicker Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                materialDesign:HintAssist.Hint="تاريخ النهاية *"
                                SelectedDate="{Binding EditingLeave.EndDate}"
                                Margin="0,0,0,8"/>

                    <TextBox Style="{StaticResource ArabicTextBoxStyle}"
                             materialDesign:HintAssist.Hint="السبب"
                             Text="{Binding EditingLeave.Reason, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             MinHeight="60"
                             Margin="0,0,0,16"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Content="تقديم الطلب"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding SaveLeaveCommand}"
                                Margin="0,0,8,0"/>
                        <Button Content="إلغاء"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Command="{Binding CancelEditCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- مؤشر التحميل -->
        <ProgressBar Grid.Row="2"
                     IsIndeterminate="True"
                     Style="{StaticResource MaterialDesignCircularProgressBar}"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
    </Grid>
</UserControl>

